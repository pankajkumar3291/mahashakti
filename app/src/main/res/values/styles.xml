<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/signupbtncolor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Base application theme. -->
    <style name="DashBoardTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:itemBackground">@color/signupbtncolor</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>


    </style>


    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <style name="TextAppearance.FontPath" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/HindVadodara-Bold.ttf</item>
    </style>

    <!--<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">-->
    <style name="AppTheme.AppBarOverlay" parent="Base.Theme.AppCompat.Light.DarkActionBar">



    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>

    <style name="SplashTheme.Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/mahashaktilogo</item>
    </style>

    <style name="NavigationDrawerStyle">

        <!--<item name="android:scrollbarThumbVertical">@color/transparent</item>-->
        <item name="android:listDivider">@color/signupbtncolor</item>
        <item name="android:textSize">@dimen/_12sdp</item><!-- text size in menu-->
        <item name="android:layout_marginBottom">05dp</item>
        <item name="android:listPreferredItemHeightSmall">40dp</item><!-- item size in menu-->

    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/orange_app</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/signupbtncolor</item>
        <item name="colorControlNormal">@color/grey</item>
        <!--&lt;!&ndash;<item name="colorControlActivated">@color/orange_app</item> &ndash;&gt; shahzeb commented this line-->
        <item name="colorControlActivated">@color/red</item>

    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/actionBarColor</item>
        <item name="colorControlActivated">@color/signupbtncolor</item>
    </style>






</resources>
