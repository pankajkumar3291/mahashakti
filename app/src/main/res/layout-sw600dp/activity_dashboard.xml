<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appyellowclr"
    android:fitsSystemWindows="true"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/headertoolbar"
            layout="@layout/toolbar"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="60dp" />


        <RelativeLayout
            android:layout_below="@id/headertoolbar"
            android:id="@+id/rlflashingNxtEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#85C1E9"
            android:alpha="1.0"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_2sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="@dimen/_3sdp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upcoming Event "
                        android:textColor="@color/tomato"
                        android:textSize="@dimen/_12sdp"
                        app:fontPath="fonts/Pacifico.ttf"
                        fontPath="fonts/HindVadodara-Bold.ttf" />


                    <TextView
                        android:id="@+id/txtEventName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mahashakti"
                        app:fontPath="fonts/Pacifico.ttf"
                        android:textColor="@color/darkgreen"
                        android:textSize="@dimen/_12sdp"
                        fontPath="fonts/HindVadodara-Bold.ttf" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/startdate"
                            android:textSize="@dimen/_10sdp"
                            app:fontPath="fonts/Pacifico.ttf"
                            android:textColor="#1C2833"
                            />


                        <TextView
                            android:id="@+id/txtStartDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12/01/2017"
                            android:textColor="@color/darkgreen"
                            app:fontPath="fonts/Pacifico.ttf"
                            android:textSize="@dimen/_10sdp"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/enddate"
                            app:fontPath="fonts/Pacifico.ttf"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="#1C2833"
                            />


                        <TextView
                            android:id="@+id/txtEndDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12/01/2017"
                            app:fontPath="fonts/Pacifico.ttf"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/darkgreen"
                            />




                    </LinearLayout>



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Approx event duration"
                        android:textColor="@color/red"
                        app:fontPath="fonts/Pacifico.ttf"
                        android:padding="@dimen/_2sdp"
                        android:textSize="@dimen/_10sdp"
                        android:gravity="center"
                        />


                    <TextView
                        android:id="@+id/txtDays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 0 "
                        android:textColor="@color/darkgreen"
                        app:fontPath="fonts/Pacifico.ttf"
                        android:padding="@dimen/_2sdp"
                        android:textSize="@dimen/_10sdp"
                        android:gravity="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="days"
                        app:fontPath="fonts/Pacifico.ttf"
                        android:textColor="@color/red"
                        android:padding="@dimen/_2sdp"
                        android:textSize="@dimen/_10sdp"
                        android:gravity="center"
                        />

                    <TextView
                        android:id="@+id/txtHours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="23"
                        app:fontPath="fonts/Pacifico.ttf"
                        android:textColor="@color/darkgreen"
                        android:padding="@dimen/_2sdp"
                        android:textSize="@dimen/_10sdp"
                        android:gravity="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hours "
                        app:fontPath="fonts/Pacifico.ttf"
                        android:textColor="@color/red"
                        android:padding="@dimen/_2sdp"
                        android:textSize="@dimen/_10sdp"
                        android:gravity="center"
                        />



                </LinearLayout>



            </LinearLayout>




        </RelativeLayout>


        <LinearLayout
            android:layout_below="@id/rlflashingNxtEvent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >


                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/relativeThoughts"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_thoughts"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:gravity="center"
                        app:cardElevation="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/thoughtclr"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_gravity="center"
                            android:src="@drawable/thought1"
                            />
                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/thought"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/relativeGallery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_gallery"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:gravity="center"
                        app:cardElevation="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/galleryclr"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_gravity="center"

                            android:src="@drawable/gallery1"
                            />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"

                        android:text="@string/gallery"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/relativeProgram"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">



                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_program"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:gravity="center"
                        app:cardElevation="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/programclr"
                        >

                        <ImageView
                            android:padding="5dp"
                            android:layout_gravity="center"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/program1"
                            />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"

                        android:text="@string/program"/>


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"

                >

                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/relativeBooking"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_booking"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:gravity="center"
                        app:cardElevation="3dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/bookingclr"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_gravity="center"

                            android:src="@drawable/booking1"
                            />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"

                        android:text="@string/booking"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/relativeProfile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">




                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_profile"
                        android:layout_width="150dp"
                        android:gravity="center"
                        android:layout_height="150dp"
                        app:cardElevation="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/profileclr"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_gravity="center"

                            android:src="@drawable/profile1"
                            />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"

                        android:text="@string/profile"/>



                </LinearLayout>


                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/relativeChat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_chat"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:gravity="center"
                        app:cardElevation="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/chatclr"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="20dp"
                            android:layout_gravity="center"

                            android:src="@drawable/chat1"
                            />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"

                        android:text="@string/chat"/>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_service"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:gravity="center"
                        app:cardElevation="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/serviceiconcolor"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="20dp"
                            android:layout_gravity="center"

                            android:src="@drawable/serviceicon"
                            />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/service"/>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_blog"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        app:cardBackgroundColor="@color/serviceiconcolor"
                        app:cardElevation="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="20dp"
                            android:src="@drawable/icon_blog" />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_1sdp"
                        android:text="@string/blog"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        app:theme="@style/NavigationDrawerStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer"
        />



</android.support.v4.widget.DrawerLayout>

