<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLoginLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1.5"
            android:gravity="center"
            android:background="@drawable/mahashaktibg"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_20sdp"
                    android:src="@drawable/backarrowwhite" />

                <ImageView
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/logomahashakti"
                    />

            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>


    </LinearLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_200sdp"
        android:elevation="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:paddingBottom="@dimen/_50sdp"
            android:paddingTop="@dimen/_10sdp">

            <EditText
                android:id="@+id/edEmailId"
                android:layout_weight="1"
                android:hint="@string/emailaddress"
                android:textColorHint="@color/tomato"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:backgroundTint="@color/grey"/>



            <EditText
                android:id="@+id/edPsw"
                android:layout_weight="1"
                android:hint="@string/password"
                android:textColorHint="@color/tomato"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"
                android:inputType="textPassword"
                android:backgroundTint="@color/grey"/>

        </LinearLayout>




    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbtnlogin"
        android:text="LOGIN"
        android:layout_marginLeft="@dimen/_70sdp"
        android:layout_marginRight="@dimen/_70sdp"
        android:elevation="20dp"
        android:textSize="@dimen/_12sdp"
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_335sdp"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/tvForgetPsw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgetpsw"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_10sdp"
        android:padding="@dimen/_5sdp"
        android:textColor="@color/tomato"
        android:textSize="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/tvChangePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/_8sdp"
        android:text="@string/changePassword"
        android:textColor="@color/tomato"
        android:textSize="@dimen/_10sdp" />


</RelativeLayout>